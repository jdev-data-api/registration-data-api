<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">%d | [$${sys:domain}] %-5p | [%t] %C : %L - %m%n</Property>
        <Property name="APP_LOG_ROOT">log</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}" />
        </Console>
 
<!--         <RollingFile name="${sys:domain}" fileName="${APP_LOG_ROOT}/application.log"  filePattern="${APP_LOG_ROOT}/application-%d{yyyy-MM-dd}-%i.log.gz"> -->
  	<RollingFile name="${sys:domain}" fileName="${sys:domain}-log"  filePattern="$${sys:domain}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Policies>
            	<TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="1000KB" />
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
 
    </Appenders>
    <Loggers>
 
        <Logger name="com.jdev" additivity="false">
            <AppenderRef ref="${sys:domain}" />
            <AppenderRef ref="console" />
        </Logger>
 
        <Root level="info">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>